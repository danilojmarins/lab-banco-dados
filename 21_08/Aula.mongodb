// OPERADORES DE COMPARA√á√ÉO MONGODB

// ano entre 1970 - 1990
use("projetodb");
db.filmes.find(
    { "ano": { $gte: 1970, $lte: 1990 } },
    { _id: 0, titulo: 1, ano: 1 }
);


// diretor = 'George Lucas'
use("projetodb");
db.filmes.find(
    { "diretor": { $eq: "George Lucas" } },
    { _id: 0, titulo: 1, ano: 1 }
);


// ano = 1973 ou 1978 ou 2020
use("projetodb");
db.filmes.find(
    { "ano": { $in: [1973, 1978, 2020] } },
    { _id: 0, titulo: 1, ano: 1 }
);


// OPERADORES L√ìGICOS MONGODB

// titulo != 'Star Wars' && ano > 1980
use("projetodb");
db.filmes.find(
    { $and: [{titulo: { $ne: "Star Wars" }}, {ano: { $gt: 1980 }}]},
    { _id: 0, titulo: 1, ano: 1 }
);


// titulo == 'Star Wars' || ano > 1980
use("projetodb");
db.filmes.find(
    { $or: [{"titulo": { $eq: "Star Wars" }}, {"ano": { $gt: 1980 }} ]},
    { _id: 0, titulo: 1, ano: 1 }
);


// EXPRESS√ïES REGULARES

// i = insensitive case
use("projetodb");
db.filmes.find({ titulo: /star wars/i });


// ^ = come√ßa com
use("projetodb");
db.filmes.find({ titulo: /^sta/i });


// $ = termina com
use("projetodb");
db.filmes.find({ titulo: /wars$/i });


// SORT -> ORDER BY

// 1 = ASC | -1 = DESC
